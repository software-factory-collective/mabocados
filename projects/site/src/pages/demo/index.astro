---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Demo">
<main>
<div class="flex flex-col h-screen w-screen justify-center items-center">
    <h1
        class="flex items-center mb-4 text-3xl font-extrabold md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400"
    >
        Mabocados
        <span
            class="bg-blue-100 text-blue-800 text-2xl font-semibold me-2 px-2.5 py-0.5 rounded dark:bg-emerald-200 dark:text-emerald-800 ms-2"
            >Alpha</span
        >
    </h1>
    <a
        class="text-white text-lg font-bold bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
        href="/demo/multiplication"
    >
        Multibocados
    </a>
</div>
</main>
</Layout>
