---
import Layout from '../../layouts/Layout.astro';

const levels = [];

for (let level = 1; level <= 20; level++) {
    levels.push(level);
}
---

<Layout title="Demo">
<main>
<div class="p-4 flex flex-col h-screen w-screen justify-center items-center">
    <h1
        class="flex items-center mb-4 text-3xl font-extrabold md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400"
    >
        Mabocados
        <span
            class="bg-blue-100 text-blue-800 text-2xl font-semibold me-2 px-2.5 py-0.5 rounded dark:bg-emerald-200 dark:text-emerald-800 ms-2"
            >Alpha</span
        >
    </h1>
    <ol class="flex flex-row overflow-auto gap-2 flex-wrap justify-center max-w-[960px]">
    {levels.map((level) => (
        
<li class="w-32 h-32 bg-gray-800 hover:bg-gray-700 rounded-xl flex items-center justify-center">
<a href={"/demo/multibocados/" + level} class="flex flex-row items-center gap-2"><span class="text-6xl">Ã—</span><span class="text-5xl">{level}</span></a>
</li>
    ))
        
    }
    </ol>
</div>
</main>
</Layout>
